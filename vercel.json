{
    "version": 2,
    "builds": [
      { "src": "*.html", "use": "@vercel/static" },
      { "src": "*.py", "use": "@vercel/python" },
      { "src": "static/**", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/", "dest": "/index.html" },
      { "src": "/about", "dest": "/about.html" },
      { "src": "/features", "dest": "/features.html" },
      { "src": "/api/(.*)", "dest": "/app.py" },
      { "src": "/static/(.*)", "dest": "/static/$1" },
      { "src": "/(.*)", "dest": "/app.py" }
    ],
    "env": {
      "PYTHON_VERSION": "3.9"
    }
  }